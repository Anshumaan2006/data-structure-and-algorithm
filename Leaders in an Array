import java.util.*;

class Solution {
    public List<Integer> leaders(int[] nums) {
        List<Integer> result = new ArrayList<>();
        int n = nums.length;

        int maxFromRight = nums[n - 1];
        result.add(maxFromRight);  // last element is always a leader

        for (int i = n - 2; i >= 0; i--) {
            if (nums[i] >= maxFromRight) {
                maxFromRight = nums[i];
                result.add(maxFromRight);
            }
        }

        Collections.reverse(result); // to maintain original order
        return result;
    }
}
